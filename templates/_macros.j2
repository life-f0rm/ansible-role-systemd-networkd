{# Jinja2 macros for common boolean conversions #}
{% macro bool_to_yesno(value) -%}
{% if value == true or value == "true" or value == "yes" or value == "1" or value == "on" -%}
yes
{% elif value == false or value == "false" or value == "no" or value == "0" or value == "off" -%}
no
{% else -%}
{{ value | lower }}
{% endif -%}
{%- endmacro %}

{# Check if a value is truthy (returns true/false for use in if statements) #}
{% macro is_truthy(value) -%}
{%- if value == true or value == "true" or value == "yes" or value == "1" or value == "on" -%}true{%- else -%}false{%- endif -%}
{%- endmacro %}

